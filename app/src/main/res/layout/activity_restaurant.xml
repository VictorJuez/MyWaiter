<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.RestaurantActivity"
    android:layout_marginBottom="0dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/restaurantProfileImage"
        android:layout_marginTop="0dp"
        android:src="@drawable/loading_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:id="@+id/tagsLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:background="#FFF"
        android:elevation="4dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.RoundedCornerMaterialTag"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="Vegan"
            android:padding="10dp"
            android:textColor="@color/black"
            />

        <TextView
            style="@style/AppTheme.RoundedCornerMaterialTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="Gluten Friendly"
            android:padding="10dp"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#FFF"
        android:elevation="4dp"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/restaurantTelephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="999 999 999"
            android:drawableLeft="@drawable/ic_baseline_local_phone_24px"
            android:drawablePadding="10dp"/>

        <TextView
            android:id="@+id/restaurantEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="restaurant.email@email.com"
            android:drawableLeft="@drawable/ic_baseline_email_24px"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/restaurantAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Adress from restaurant, 99, Location"
            android:drawableLeft="@drawable/ic_baseline_location_on_24px"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#FFF"
        android:elevation="4dp"
        android:padding="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/restaurantDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/verCartaButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            style="@style/AppTheme.RoundedCornerMaterialButton"
            android:layout_marginTop="15dp"
            android:text="VER CARTA"

            />

    </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>